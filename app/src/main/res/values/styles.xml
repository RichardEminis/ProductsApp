<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="StyleTitle" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textFontWeight">600</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">@dimen/text_title_size</item>
    </style>

    <style name="StyleDescription" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textFontWeight">600</item>
        <item name="android:textSize">@dimen/text_description_size</item>
    </style>

    <style name="StyleImageTitle" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textFontWeight">600</item>
        <item name="android:textAllCaps">true</item>
        <item name="cornerRadius">@dimen/main_half</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
        <item name="android:paddingVertical">@dimen/main_half</item>
        <item name="android:paddingHorizontal">@dimen/main_half</item>
    </style>

</resources>